<header>
  <img src="/images/header.png" class="img-fluid" alt="header">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <section class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="/images/logo.png" alt="logo" class="rounded-circle" width="50px">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <section class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <section class="navbar-nav">
          <a class="nav-link" aria-current="page" href="/">Home</a>
          {{#if logged_in}}
          <a class="nav-link" id="logout" href="#">logout</a>
          <a class="nav-link" href="/dashboard">Dashboard</a>
          {{else}}
          <a class="nav-link" href="/login">login/signup</a>
          {{/if}}
        </section>
      </section>
    </section>
  </nav>
</header>

<main class="container-fluid mt-3 mb-3">
  <section class="row justify-content-center">

    <section class="col-sm-8 justify-content-center text-center align-content-center mb-4">

      <form class="m-3">
        <h5 class="text-center card-title">New Post</h5>
        <section class="mb-3">
          <label for="post_title" class="form-label">Post Title</label>
          <input class="form-control" id="postTitle" name="post_title" type="text" />
        </section>

        <section class="mb-3">
          <label for="content" class="form-label">Post Content</label>
          <textarea class="form-control" id="postContent" name="content" type="text"></textarea>
        </section>

        <button id="createPost" class="btn btn-dark localBtn mb-3">Publish</button>

      </form>
    </section>

  </section>
</main>

<script src="/js/new-post.js"></script>
<script src="/js/logout.js"></script>