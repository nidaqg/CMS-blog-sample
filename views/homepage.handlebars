<header>
  <img src="/images/header.png" class="img-fluid" alt="header">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <section class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="/images/logo.png" alt="logo" class="rounded-circle" width="50px">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <section class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <section class="navbar-nav">
          <a class="nav-link" aria-current="page" href="/">Home</a>
          {{#if logged_in}}
          <a class="nav-link" id="logout" href="#">logout</a>
          <a class="nav-link" href="/dashboard">Dashboard</a>
          {{else}}
          <a class="nav-link" href="/login">login/signup</a>
          {{/if}}
        </section>
      </section>
    </section>
  </nav>
</header>

<main class="container-fluid mt-3 mb-3">
  <section class="row text-center justify-content-center">

    <section class="col-md-9">
      <section class="row text-center justify-content-center">
        <section class="row row-cols-1 row-cols-lg-2 g-4">

          {{#each blogposts as |blogpost|}}

          <section class="col">

            <section class="card m-2 hvr-grow-shadow">
              <a class="card-block stretched-link text-decoration-none" href="/blogpost/{{blogpost.id}}">
              <section class="card-body text-center">
                <h5 class="text-center text-dark card-title">{{blogpost.post_title}}</h5>
                <h6 class="text-center card-subtitle mb-2 text-muted">Written by: {{blogpost.user.username}}</h6>
                <h6 class="text-center card-subtitle mb-2 text-muted">{{format_date blogpost.date_created}}</h6>
              </section>
              </a>
            </section>

          </section>
          {{/each}}

        </section>
      </section>
    </section>
  </section>
</main>

<script src="/js/homepage.js"></script>
<script src="/js/logout.js"></script>